<div class="page-heading">
	<div class="page-title">
		<div class="row">
			<div class="col-12 col-md-6 order-md-1 order-last">
				<h3>List of users</h3>
				<p class="text-subtitle text-muted">List of users who registered in database</p>
			</div>
			<div class="col-12 col-md-6 order-md-2 order-first">
				<nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
						<li class="breadcrumb-item active" aria-current="page">Users</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>

	<!-- Basic Tables start -->
	<section class="section">
		<div class="card">
			<div class="card-header d-flex justify-content-between align-items-center">
				Tabel of users
				<button type="button" class="btn btn-outline-success" data-bs-toggle="modal"
					data-bs-target="#inlineForm">
					Create a new user
				</button>
				<%- include("./layouts/createForm.ejs"); %>
			</div>
			<div class="card-body">
				<table class="table" id="table1">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Address</th>
							<th>Nickname</th>
							<th>Playtime (Hours)</th>
							<th>Action</th>
						</tr>
					</thead>

					<tbody>
						<%usersWithData.forEach(({id,nickname,playTime,Biodata})=>{ %>
						<tr>
							<td class="d-none"><%= id %></td>
							<td><%= Biodata.name %></a></td>
							<td><%= Biodata.email %></td>
							<td><%= Biodata.address %></td>
							<td><%= nickname%></td>
							<td><%= playTime%></td>
							<td>
								<a href="/users/<%= id %>/edit"><button type="submit"
										class="btn btn-secondary">Edit</button></a>
								<a href="/users/<%= id %>/delete"><button type="submit"
										class="btn btn-danger">Delete</button></a>
							</td>
						</tr>
						<%})%>
					</tbody>
				</table>
			</div>
		</div>

	</section>
	<!-- Basic Tables end -->
</div>